{
  "compilerOptions": {
    "target": "ES2020",                         // Good compatibility and async/await support
    "module": "CommonJS",                       // Node.js default module system
    "lib": ["ES2020"],                          // Includes modern JS features
    "outDir": "dist",                           // Compiled files go here
    "rootDir": "./",                           // Your TS source files
    "esModuleInterop": true,                    // Allows default import syntax for CommonJS modules
    "moduleResolution": "node",                 // Resolve modules like Node.js
    "resolveJsonModule": true,                  // Allows importing JSON files
    "forceConsistentCasingInFileNames": true,   // Helps avoid issues on case-sensitive file systems
    "strict": true,                             // Enables all strict type checks
    "skipLibCheck": true                        // Speeds up compilation, skips type checks on node_modules
  },
  "include": ["./src/**/*.{ts,js}", "./src/*.ts",
	  "./src/types/fastify.d.ts", "./webpack.config.ts"],
  "exclude": ["node_modules", "dist"]
}
